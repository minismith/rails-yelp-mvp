<div class="container">
<h1 class="my-3"><%= @restaurant.name %></h1>


<p><strong>Address:</strong> <%= @restaurant.address %></p>
<p><strong>Phone number:</strong> <%= @restaurant.phone_number %></p>
<p><strong>Category:</strong> <%= @restaurant.category %></p>

<h2>Reviews:</h2>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
      <strong>Rating:</strong> <%= review.rating %>
      <strong>Review:</strong> <%= review.content %>
    </li>
  <% end %>
</ul>

<br>

<h2>Leave a review:</h2>
<%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating %>
    <%= f.input :content %>
    <%= f.submit "Submit review", class: "btn btn-outline-dark" %>
  <% end %>

<br>

<%= link_to "Back to all restaurants",  restaurants_path, class: "btn btn-outline-dark mb-3"%>

</div>

<div class="container">
<h1 class="my-3"><%= @restaurant.name %></h1>


<p><strong>Address:</strong> <%= @restaurant.address %></p>
<p><strong>Phone number:</strong> <%= @restaurant.phone_number %></p>
<p><strong>Category:</strong> <%= @restaurant.category %></p>

<h2>Reviews:</h2>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
      <%= review.content %>
      <strong>Rating:</strong> <%= review.rating %>
    </li>
  <% end %>
</ul>

<br>

<%= link_to "Leave a review",  new_restaurant_review_path(@restaurant), class: "btn btn-outline-dark mb-3"%>
<%= link_to "Back to all restaurants",  restaurants_path, class: "btn btn-outline-dark mb-3"%>

</div>
